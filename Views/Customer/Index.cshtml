    <div class="tableDataRow pagerRow">
        <div class="tableDataCell" style="float: left;">
            @if (ViewBag.pageNo > 0)
            {
                <a href="@Url.Action("Index", new {pageNo = ViewBag.pageNo - 1})"> previous</a>
            }
        </div>
        <div class="tableDataCell" style="margin-left: auto; margin-right: auto;">
            @{
                int pageNumber = ViewBag.pageNo + 1;
                int maximumPage = ViewBag.maxPage + 1;
            }
            @Html.Encode("" + pageNumber + " / " + maximumPage)
        </div>
        <div class="tableDataCell" style="float: right;">
            @if (ViewBag.pageNo < ViewBag.maxPage)
            {
                <a href="@Url.Action("Index", new {pageNo = ViewBag.pageNo + 1})"> Next</a>
            }
            
        </div>
    </div>
</div>
 
